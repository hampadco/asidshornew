<style>
    th, td, tr {
        padding: 5px;
        text-align: center !important;
    }
</style>
        <div class="page-body " >

           

 <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>داشبورد
                                    
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item active">داشبورد</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>




                 
                    <div class="col-xl-12 xl-100 mt-7">
                        
                        <div class="card">
                            <div class="card-header">
                         
                           <div class="text-center mt-7 row   ">


                           @* add car to categoris *@

                            <form action="/admin/home/CardOfBanks" method="post" class="col-12">
                                   <div class="row justify-content-center  p-3" >

                                            <div class="col-xxl-4 col-lg-4 col-xl-4 col-md-4 col-12">
                                                <input name="CardNumber" class="form-control" type="text" placeholder="  شماره کارت را وارد کنید  "  required>
                                            

                                            </div>
                                            <div class="col-xxl-4 col-lg-4 col-xl-4 col-md-4 col-12 mt-1">
                                                <input name="OwnerName" class="form-control" type="text" placeholder="نام صاحب کارت را وارد کنید" required>
                                            </div>
                                            

                                            <div class="col-xxl-2 col-lg-2 col-xl-2 col-md-2 col-12 mt-1 ">
                                                <button type="submit" class="btn btn-primary form-control"> اضافه کردن </button>

                                            </div>

                                    </div>
                               </form>
                                      

                       @* create table show list car row  car name  and edit and delete *@

                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ردیف</th>
                                            
                                           <th>شماره کارت</th>

                                            <th> صاحب کارت</th>
                                    
                                            <th>حذف</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if(ViewBag.listcards ==null)
                                        {
                                            <tr>
                                                <td colspan="5" class="text-center">هیچ کارتی یافت نشد</td>
                                            </tr>
                                        }
                                        else
                                        {
                                        @foreach (var item in ViewBag.listcards)
                                        {   
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.CardNumber</td>
                                                <td>@item.OwnerName</td>
                                                <td><a href="/admin/home/carddelete?id=@item.Id" class="btn btn-danger" onclick="return confirm('ایا از حذف مطمئن هستید ')">حذف</a></td>
                                            </tr>
                                        }
                                        }

                                    </tbody>

                                </table>

                            </div>


                           
                           

                     </div>

                            </div>
                        </div>
                        
                    </div>

  